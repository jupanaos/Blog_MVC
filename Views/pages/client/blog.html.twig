{% extends "base.html.twig" %}

{% block title %}Blog - Blog de Jupanaos{% endblock %}

{% block content %}

<div class="back-button"><a href={{ "/" }}><button class="back">&#8617; Retour</button></a></div>
    <section class="main-blog">
        <h2 class="dark_title section_title">
            Le blog
        </h2>
        <div class="article__cards">
        {% for article in articles %}
            {% if article.status == 'Published' %}
                <div class="article__card">
                    <a href="{{ "/blog/article/"~article.id }}">
                        <div class="card-blog_image"><img src="{{ article.picture }}" alt="{{ article.title }} illustration" /></div>
                        <div class="article__content">
                            <div class="article__date">{{ article.createdAt|date('d/m/Y Ã  H:i') }}</div>
                            <h3 class="article__title">{{ article.title }}</h3>
                            <p>{{ article.content|length > 100 ? article.content|slice(0, 100) ~ '...' : article.content }}</p>
                            <a href="{{ "/blog/article/"~article.id }}">Lire la suite</a>
                        </div>
                    </a>
                </div>
            {% endif %}
        {% endfor %}
        </div>

    </section>


{% endblock %}